[Desktop Entry]
_Name=Kazam
_GenericName=Screencaster and Screenshooter
_Comment=Record a video and take a screenshot of your screen
_Keywords=screenshot;screencast;videorecord;desktop recording;
Categories=GNOME;AudioVideo;
Exec=kazam
Icon=kazam
Terminal=false
Type=Application

Actions=SSF;SSA;SSW;Prefs;

[Desktop Action SSF]
Name=Take a screenshot of entire workspace
Name[bg]=Снимане на целия екран
Exec=kazam -f
OnlyShowIn=Unity

[Desktop Action SSA]
Name=Select an area to screenshot
Name[bg]=Снимане на област
Exec=kazam -a
OnlyShowIn=Unity

[Desktop Action SSW]
Name=Select a window to screenshot
Name[bg]=Снимане на прозорец
Exec=kazam -w
OnlyShowIn=Unity

[Desktop Action Prefs]
Name=Preferences
Name[bg]=Настройки
Exec=kazam -p
OnlyShowIn=Unity
